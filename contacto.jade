include site/_config.jade

+html5
  +head(title, stylesheets, keywords, description)
  body    
  header#FondoCompleto
    .container#cabezal
      a(href="index.html").col3.col-m4.push-m4#logo
        .img(data-sr)
          img(src='site/img/logo2.png', alt="Alex Courcelle").w100
      .col5
        div#texto_header Alex Courcell
          div#texto_header2 Fotografía y Video
      .col4
